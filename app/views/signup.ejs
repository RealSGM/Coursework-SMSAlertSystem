<%- include('partials/layout') %>

<body>
    <%- include('partials/navbar') %>
    <%- include('partials/desktopNavbar') %>
    <div class="content" id="content-sign-up">
        <div class="container sign-up-cont">
        
            <div class="khmer signup-lan">
                <h1>ចុះ​ឈ្មោះ</h1>
            </div>
            <p class="alert"><%- alert %></p>
            <form class="sign-up-form" action="" method="POST">
                <div class="form-group">
                    <div class="khmer signup-lan">
                        <label for="phoneNumber">លេខទូរសព្ទ:</label>
                    </div>
                    <input type="tel" id="phoneNumber" name="phoneNumber">
                </div>

                <div class="form-group">
                    <div class="khmer signup-lan">
                        <label for="email">អ៊ីមែល៖</label>
                    </div>
                    <input type="email" id="email" name="email">
                </div>

                <div class="form-group">
                    <button class="button primary-button" type="submit" name="action" value="submit">ដាក់ស្នើ</button>
                </div>
                <div id="google_translate_element"></div>
            </form>
        </div>
        <script type="text/javascript">
            function googleTranslateElementInit() {
              new google.translate.TranslateElement({pageLanguage: 'km'}, 'google_translate_element');
            }
            </script>
        <script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
        
    </div>
</body>